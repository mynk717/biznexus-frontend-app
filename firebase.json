{
  "hosting": {
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "source": ".",
    "frameworks": {
      "next.js": {
        "options": {
          "functions": {
            "region": "us-central1",
            "memory": "1GiB",
            "timeoutSeconds": 60
          }
        }
      }
    }
  },
  "functions": { 
    "source": "functions",
    "codebase": "default",
    "runtime": "nodejs18",
    "region": "us-central1", 
    "gen": 2, 
    "cpu": 1
  }
}